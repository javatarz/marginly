# Core (required for local dev)
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Book Fetching (optional - for fetch-books script)
GITHUB_TOKEN=your-github-token
BOOKS_CONFIG={"books":[{"slug":"my-book","source":{"type":"github-release","repo":"your-username/your-book-repo","release":"latest"}}]}

# CI/CD (required for Vercel deployment)
SUPABASE_ACCESS_TOKEN=your-access-token
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Analytics (optional)
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-website-id
NEXT_PUBLIC_UMAMI_URL=https://your-analytics-domain.com
